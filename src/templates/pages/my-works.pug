extends ../template

block variables
    - var title = 'Мои работы'

block content
    .works__wrapper#works__wrapper
        .full-menu__container
            //- a#cross.cross-link(href='#')
                //- img.full-menu__cross(src='assets/images/cross.png', alt='')
            .full-menu__nav
                .full-menu__item
                    a.nav__link(href='#', data-scroll-to='1') Мои работы
                .full-menu__item
                    a.nav__link(href='#', data-scroll-to='2') Блог
                .full-menu__item
                    a.nav__link(href='#', data-scroll-to='3') Обо мне
                .full-menu__item
                    a.nav__link(href='#', data-scroll-to='4') Авторизация
        include ../common/header.pug
        section.section.works__slider
            .slider__title.block-title Мои работы
            include ../common/slider.pug

        section.section.works__review
            .review__title.block-title Что обо мне говорят
            .review__content.block-review
                .block-review__first
                    .block-review__avatar
                        img.block-review__pic(src="assets/images/review-face.png", alt="")
                    .block-review__content Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                    .block-review__name Ковальчук Дмитрий
                    .block-review__job — основатель Loftschool
                .block-review__second
                    .block-review__avatar
                        img.block-review__pic(src="assets/images/review-face.png", alt="")
                    .block-review__content Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                    .block-review__name Ковальчук Дмитрий
                    .block-review__job — основатель Loftschool
            .review__window-link.window-link__box
                .window-link__title.block-subtitle Связаться со мной
                input.window-link__name(name="name" id="name" type="text" placeholder="Имя")
                input.window-link__mail(name="mail" id="mail" type="text" placeholder="Email")
                textarea.window-link__message(name="message" id="message" placeholder="Ваше сообщение" rows="3")
                .window-link__buttons
                    button.window-link__send Отправить
                    button.window-link__reset Очистить
            include ../common/footer.pug
